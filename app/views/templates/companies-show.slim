script type="text/x-handlebars" data-template-name="companies/show"
  erb:
    <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title clearfix">
            <span class="panel-title__text">Company Detail</span>
            {{#link-to 'companies.edit' model class="btn btn-primary pull-right"}}
              <span class="glyphicon glyphicon-pencil" style="color: white"></span>
            {{/link-to}}
          </h2>
        </div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>{{model.id}}</dd>
            <dt>Name</dt>
            <dd>{{model.name}}</dd>
            <dt>Address</dt>
            <dd>{{model.address}}</dd>
            <dt>City</dt>
            <dd>{{model.city}}</dd>
            <dt>Country</dt>
            <dd>{{model.country}}</dd>
            <dt>Email</dt>
            <dd>{{model.email}}</dd>
            <dt>Phone</dt>
            <dd>{{model.phone}}</dd>
          </dl>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title clearfix">
            <span class="panel-title__text">Employees</span>
          </h2>
        </div>
        <ul class="list-group">
          {{#each employee in employees}}
            <li class="list-group-item">
              {{#link-to 'employees.show' employee}}
                {{employee.name}} <em>({{employee.position.name}})</em>
              {{/link-to}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
